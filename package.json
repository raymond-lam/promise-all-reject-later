{
  "name": "promise-all-reject-later",
  "version": "1.0.13",
  "description": "A drop-in replacement for Promise.all() which does not fail-fast.",
  "main": "index.js",
  "keywords": [
    "Promise.all",
    "Promise.all()",
    "promise",
    "all",
    "promise all",
    "fail-fast",
    "fail fast",
    "no-fail-fast",
    "no fail fast",
    "reject",
    "last",
    "late",
    "reject last",
    "reject late",
    "return last",
    "return late"
  ],
  "scripts": {
    "clean": "rimraf coverage",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "mocha test.js",
    "test:coverage": "nyc --reporter=lcov --reporter=text mocha test.js",
    "test:lint": "eslint --ignore-path=.gitignore"
  },
  "author": {
    "name": "Raymond Lam",
    "email": "ray@lam-ray.com"
  },
  "homepage": "https://github.com/raymond-lam/promise-all-reject-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/raymond-lam/promise-all-reject-later.git"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^7.16.0",
    "mocha": "^8.2.1",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "check-coverage": true,
    "temp-dir": "./coverage/.nyc_output"
  }
}
